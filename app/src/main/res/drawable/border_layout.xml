<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

        <stroke android:width="2dp" android:color="#2112c9" />

        <gradient android:angle="90" android:endColor="#110f9e" android:startColor="#0a20c9" />

        <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

        <corners android:radius="10px"/>
    </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <stroke android:width="1dp" android:color="#525dbc" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <corners android:radius="10px"/>
        </shape>
    </item>
</selector>