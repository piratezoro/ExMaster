<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.expensemaster.Activities.OnlyIncomeActivity"
    android:background="#E8E8E8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/income_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/day_income_card"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:elevation="50dp"
                android:background="@color/ap_white">

                <RelativeLayout
                    android:id="@+id/day_income_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ap_white"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_day_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Income"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txt_day_income_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:layout_alignParentRight="true"
                        android:layout_alignBaseline="@+id/txt_day_income"
                        android:paddingRight="10dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/week_income_card"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:elevation="50dp"
                android:background="@color/ap_white"
                android:layout_below="@+id/day_income_card"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/week_income_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ap_white"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_week_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This Week Income"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txt_week_income_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:layout_alignParentRight="true"
                        android:layout_alignBaseline="@+id/txt_week_income"
                        android:paddingRight="10dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/month_income_card"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:elevation="50dp"
                android:background="@color/ap_white"
                android:layout_below="@+id/week_income_card"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/month_income_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ap_white"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_month_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This Month Income"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txt_month_income_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:layout_alignParentRight="true"
                        android:layout_alignBaseline="@+id/txt_month_income"
                        android:paddingRight="10dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/month_income_card">

                <TextView
                    android:id="@+id/txt_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/txt_income_for_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_balance"
                    android:layout_marginTop="10dp"
                    android:text="This month's Income"/>

                <TextView
                    android:id="@+id/txt_income_amount_for_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txt_income_for_balance"
                    android:layout_alignParentRight="true"
                    android:text="Income"/>

                <TextView
                    android:id="@+id/txt_expense_for_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_income_for_balance"
                    android:layout_marginTop="10dp"
                    android:text="This month's Expense"/>

                <TextView
                    android:id="@+id/txt_expense_amount_for_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txt_expense_for_balance"
                    android:layout_alignParentRight="true"
                    android:text="Expense"/>

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_expense_for_balance"
                    android:layout_marginTop="10dp"
                    android:text="Balance Amount for month"/>

                <TextView
                    android:id="@+id/balance_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/balance"
                    android:layout_alignParentRight="true"
                    android:text="Balance"/>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
